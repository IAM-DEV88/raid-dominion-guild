  <body>
    <PortalSmoke />
    <div class="max-w-6xl px-10 pt-1 mx-auto">
      <slot />
      <div
        style="position:absolute;"
        class="bg-gradient-to-b from-.2% from-[rgba(255,255,255,.01)] from-.1% to-[rgba(17,17,17,1)] w-100 h-40 inset-x-0 dsm:bottom-[-58px] z-[-2]"
      >
      </div>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    background:
      url("/bgweb.jpg") no-repeat,
      #111;
