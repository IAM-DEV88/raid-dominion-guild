---
import "@fontsource-variable/jost";
import PortalSmoke from "../components/PortalSmoke.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="TODO" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <PortalSmoke />
    <div class="max-w-6xl px-10 pt-1 mx-auto">
      <slot />
      <div
        style="position:absolute;"
        class="bg-gradient-to-b from-.2% from-[rgba(255,255,255,.01)] from-.1% to-[rgba(17,17,17,1)] w-100 h-40 inset-x-0 bottom-0 z-[-2]"
      >
      </div>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    background:
      url("/bgweb.jpg") no-repeat,
      #111;
    background-size: 100% 100vh;
    background-position: center top;
  }
</style>
